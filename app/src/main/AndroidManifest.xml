<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="io.github.bctnry.tsubasareader">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/tprotocol_logo"
            android:label="@string/app_name"
            android:roundIcon="@drawable/tprotocol_logo"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".MainActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".AboutActivity"
                android:parentActivityName=".MainActivity"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".FeedAddActivity"
                android:parentActivityName=".FeedManagementActivity"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".FeedManagementActivity"
                android:parentActivityName=".MainActivity"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".SettingsActivity"
                android:parentActivityName=".MainActivity"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".FeedEditActivity"
                android:parentActivityName=".FeedManagementActivity"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".FeedDetailActivity"
                android:parentActivityName=".MainActivity"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".FeedSinglActivity"
                android:parentActivityName=".FeedListActivity"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".FeedListActivity"
                android:parentActivityName=".MainActivity"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".FavouriteFeedActivity"
                android:parentActivityName=".MainActivity"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".FileActivity"
        android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>